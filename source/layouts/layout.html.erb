<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title><%= "#{current_page.data.title || yield_content(:title)} | Cornell University Sustainable Design" %></title>

    <%= stylesheet_link_tag "normalize", "cusd" %>
    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,300' rel='stylesheet' type='text/css'>
    <%= javascript_include_tag  "head" %>
  </head>

  <body class="<%= page_classes %>">

    <header class="site-header">
      
      <div class="site-header__wrapper">

        <% link_to '/index.html' do %>
          <div class="site-logo">
            <%= image_tag "CUSDLogoTypeGray.svg", class: "site-logo__image" %>
            <span class="site-logo__text">Cornell University<br>Sustainable Design</span>
          </div>
        <% end %>
        <div class="main-nav">
          <ul class="main-nav__menu">
            <li> 
              <a href="#" class="button">Donate</a>
            </li>
            <li><%= link_to 'Connect', '/connect.html' %></li>
            <li><%= link_to 'About', '/about.html' %></li>
            <!-- <li><%= link_to 'Team', '/team.html' %></li> -->
            <li><%= link_to 'Projects', '/projects.html' %></li>
          </ul>
        </div>

        <div class="mobile-nav">
          <a href="#mobileMenu" class="button secondary">Menu</a>
        </div>

      </div>
    </header>

    <%= yield %>

    <footer class="site-footer">
      <div class="site-footer__wrapper">
        <div class="site-footer__social-links">
          <ul>
            <li><a href="#">Facebook</a></li>
            <li><a href="#">Twitter</a></li>
            <li><a href="#">Flickr</a></li>
            <li><a href="#">Vimeo</a></li>
            <li><a href="#">JoinCUSD.org</a></li>
          </ul>
        </div>
        <div class="site-footer__copyright">
          <span>&copy;&nbsp;2011&ndash;<%= Time.now.year %> Cornell University Sustainable Design</span>
        </div>
      </div>
    </footer>
    <%= javascript_include_tag  "cusd" %>
  </body>
</html>
