<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title><%= "#{current_page.data.title || yield_content(:title)} | Cornell University Sustainable Design" %></title>

    <%= stylesheet_link_tag "normalize", "cusd" %>
    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,200,200italic,300,300italic,400italic,600,600italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <%= javascript_include_tag  "head" %>
  </head>

  <body class="<%= page_classes %>">

    <header class="site-header">
      
      <div class="site-header__wrapper">

        <% link_to '/index.html' do %>
          <div class="site-logo">
            <%= image_tag "CUSDLogoTypeGray.svg", class: "site-logo__image" %>
            <span class="site-logo__text">Cornell University<br>Sustainable Design</span>
          </div>
        <% end %>
        <div class="main-nav">
          <ul class="main-nav__menu">
            <li> 
              <a href="#" class="button">Donate</a>
            </li>
            <li><%= link_to 'Connect', '/connect.html' %></li>
            <li><%= link_to 'About', '/about.html' %></li>
            <li><%= link_to 'Team', '/team.html' %></li>
            <li><%= link_to 'Projects', '/projects.html' %></li>
          </ul>
        </div>

        <div class="mobile-nav">
          <a href="#mobileMenu" class="button secondary">Menu</a>
        </div>

      </div>
    </header>

    <%= yield %>

    <div class="footer">
      This is the Footer!
      <%= link_to 'Home', '/index.html' %>
      <%= link_to 'About', '/about.html' %>
      <%= link_to 'Projects', '/projects.html' %>
      <%= link_to 'Team', '/team.html' %>
      <%= link_to 'Connect', '/connect.html' %>
      <%= link_to 'SEG', '/projects/seg.html' %>
    </div>
    <%= javascript_include_tag  "cusd" %>
  </body>
</html>
